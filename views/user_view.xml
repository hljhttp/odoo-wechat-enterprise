<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_wechat_enterprise_user_tree" model="ir.ui.view">
            <field name="name">view.wechat.enterprise.user.tree</field>
            <field name="model">wechat.enterprise.user</field>
            <field name="arch" type="xml">
                <tree color="blue:state=='bind';red:state=='invited'">
                    <field name="name"/>
                    <field name="login"/>
                    <field name="user"/>
                    <field name="wechat_login"/>
                    <field name="mobile"/>
                    <field name="email"/>
                    <field name="account"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_wechat_enterprise_user_form" model="ir.ui.view">
            <field name="name">view.wechat.enterprise.user.form</field>
            <field name="model">wechat.enterprise.user</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="绑定" name="bind" type="object" states="unbind" class="oe_highlight"/>
                        <button string="解绑" name="unbind" type="object" states="bind,invited"/>
                        <button string="Invite him" name="invite" type="object" states="bind"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group invisible="1">
                            <field name="id"/>
                        </group>
                        <group>
                            <group>
                                <field name="account"/>
                                <field name="user"/>
                            </group>
                            <group>
                                <field name="login" attrs="{'readonly':[('state','=','bind')]}"/>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="mobile"/>
                                <field name="email"/>
                                <field name="wechat_login"/>
                            </group>
                            <group>
                            	<!--field name="department"/-->
                                <field name="job"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
	</data>
</openerp>